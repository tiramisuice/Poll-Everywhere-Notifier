{
  "manifest_version": 3,
  "name": "Poll Everywhere Notifier",
  "version": "1.0.0",
  "description": "Get notifications when your professor posts new questions on Poll Everywhere",
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://pollev.com/*",
    "https://*.pollev.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://pollev.com/*",
        "https://*.pollev.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
